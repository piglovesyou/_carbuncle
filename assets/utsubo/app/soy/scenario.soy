{namespace app.soy.scenario}





/***/
{template .createDom}
  <div class="scenario">
    <div class="scenario-header">scenario header</div>
    <div class="scenario-body"></div>
    <div class="scenario-footer">
      <a class="scenario-footer-reset pure-button" href="javascript:void 0">reset</a>
      {sp}
      <a class="scenario-footer-save pure-button" href="javascript:void 0">save</a>
      {sp}
      <a class="scenario-footer-preview pure-button" href="javascript:void 0">preview</a>
    </div>
  </div>
{/template}






/**
 * @param id
 * @param title
 * @param css
 * @param mode
 * @param type
 * @param text
 */
{template .renderEntry}
<div data-id="{$id}" class="scenario-entry" title="{$css}">
  <div style="float:right;text-align:right;">
    <a class="scenario-entry-edithook" href="javascript:void(0)">edit</a>
    <br />
    <a class="scenario-entry-deletehook" href="javascript:void(0)">del</a>
  </div>
  {$title}
  <div class="scenario-entry-meta" style="color:gray">
    {$mode}, {$type}{$text ? ', ' + $text : ''}
  </div>
</div>
{/template}
